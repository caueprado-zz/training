<!DOCTYPE HTML>
<html lang="pt-br">
	<%- include('../template/header'); -%>

	<body>

        <header>
          <div class="navbar navbar-dark bg-dark box-shadow">
            <div class="container d-flex justify-content-between">
              <a href="#" class="navbar-brand d-flex align-items-center">
                <strong>Cadastro de Pauta</strong>
              </a>
            </div>
          </div>
        </header>
	    <div class="container">
			<% if(validacao.length > 0) { %>
				<div class="row">
					<div class="col-md-12">
						<div class="alert alert-danger">
							<strong>Atenção!</strong>
							<ul>
								<% for(var i = 0; i < validacao.length; i++) { %>
									<li><%= validacao[i].msg %></li>
								<% } %>
							</ul>
						</div>
					</div>
				</div>
			<% } %>

	    	<div class="row">
	    		<div class="col-md-12">
					<form action="/pautas/cadastrar" method="post">
						<div class="form-group">
							<label for="name">Nome:</label>
							<input type="text" placeholder="@tritao" class="form-control" id="name" name="name">
						</div>

						<div class="form-group">
							<label for="description">Descrição:</label>
							<input type="text" class="form-control" id="description" name="description" placeholder="sobre">
                        </div>
                        
						<div class="form-group">
							<label for="category">Categoria:</label>
							<input type="text" class="form-control" id="category" name="category" placeholder="Categoria da sua pauta">
                        </div>
                        
						<button type="submit" class="btn btn-default">Cadastrar</button>
					</form>
		    	</div>
	    	</div>
	    </div>

	    <footer class="text-muted">
          <div class="container">
          </div>
        </footer>

        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
	    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
	    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.11/jquery.mask.min.js"></script>
	    </body>
</html>